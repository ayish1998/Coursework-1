<h2>{{viewTitle}}</h2>
<!--Create event form starts here-->
<form action="#" id="event-form">
    <section class="pt-16">
        <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
            <h2 class="mb-4 text-2xl font-bold text-gray-900 dark:text-black">Create Event</h2>

            <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                <div class="sm:col-span-2">
                    <label for="name" class="block mb-4 text-xl font-medium text-gray-900 dark:text-gray-500">Event
                        Title</label>
                    <input type="text" name="name" id="name"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary1-600 focus:border-primary1-600 block w-full p-2.5 dark:bg-white dark:border-blue-600 dark:placeholder-gray-600 dark:text-white dark:focus:ring-primary1-500 dark:focus:border-primary1-500"
                        placeholder="Title" required="">
                </div>
                <div>
                    <label for="category" class="block mb-4 text-xl font-medium text-gray-900 dark:text-gray-500">Event
                        Category</label>
                    <select id="category"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary1-600 focus:border-primary1-600 block w-full p-2.5 dark:bg-white dark:border-blue-600 dark:placeholder-gray-600 dark:text-black dark:focus:ring-primary1-500 dark:focus:border-primary1-500">
                        <option selected="">Select category</option>
                        <option value="PD">Professional Development</option>
                        <option value="NT">Networking</option>
                        <option value="CE">Campus Event</option>
                        <option value="CF">Career Fair</option>
                    </select>
                </div>
                <div>
                    <label for="event-type"
                        class="block mb-4 text-xl font-medium text-gray-900 dark:text-gray-600">Event Type</label>
                    <select id="event-type"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary1-600 focus:border-primary1-600 block w-full p-2.5 dark:bg-white dark:border-blue-600 dark:placeholder-gray-600 dark:text-black dark:focus:ring-primary1-500 dark:focus:border-primary1-500">
                        <option selected="">Select type</option>
                        <option value="F">Free</option>
                        <option value="SP">Sponsored</option>
                    </select>
                </div>

                <div>
                    <label for="date-time" class="block mb-4 text-xl font-medium text-gray-900 dark:text-gray-600">Date
                        & Time</label>
                    <input type="datetime-local" name="date-time" id="date-time"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary1-600 focus:border-primary1-600 block w-full p-2.5 dark:bg-white dark:border-blue-600 dark:placeholder-gray-600 dark:text-black dark:focus:ring-primary1-500 dark:focus:border-primary1-500"
                        required="">
                </div>
                <div>
                    <label for="location"
                        class="block mb-4 text-xl font-medium text-gray-900 dark:text-gray-600">Location</label>
                    <input type="text" name="location" id="location" placeholder="Write location..."
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary1-600 focus:border-primary1-600 block w-full p-2.5 dark:bg-white dark:border-blue-600 dark:placeholder-gray-600 dark:text-black dark:focus:ring-primary1-500 dark:focus:border-primary1-500"
                        required="">
                </div>

                <div class="sm:col-span-2">
                    <label for="image" class="block mb-4 text-xl font-medium text-gray-900 dark:text-gray-600">Event
                        Image</label>
                    <div class="bg-gray-50 p-8 rounded-lg border border-gray-300 text-center">
                        <label for="image" class="text-gray-900 text-sm cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 m-auto text-gray-400" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M11 16a1 1 0 0 1-1-1v-1h2v1a1 1 0 0 1-1 1Z" />
                                <path
                                    d="M17.989 6.124a6.5 6.5 0 0 0-12.495-2.1A5 5 0 0 0 6 14h4V8.414l-.293.293a1 1 0 0 1-1.414-1.414l2-2a1 1 0 0 1 1.414 0l2 2a1 1 0 1 1-1.414 1.414L12 8.414V14h5a4 4 0 0 0 .989-7.876Z" />
                            </svg>
                            <span class="block mt-2">Upload Image</span>
                        </label>
                        <input type="file" name="image" id="image" accept="image/*" class="hidden" required>
                    </div>
                </div>
                <div class="sm:col-span-2">
                    <label for="description"
                        class="block mb-4 text-xl font-medium text-gray-900 dark:text-gray-600">Description</label>
                    <textarea id="description" rows="8"
                        class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary1-600 focus:border-primary1-600 dark:bg-white dark:border-blue-600 dark:placeholder-gray-600 dark:text-black dark:focus:ring-primary1-500 dark:focus:border-primary1-500"
                        placeholder="Write description..."></textarea>
                </div>
            </div>

            <button type="submit"
                class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-xl font-medium text-center text-white bg-blue-800 rounded-lg focus:ring-4 focus:ring-primary1-200 dark:focus:ring-primary1-900 hover:bg-blue-600">Publish
                Now</button>
        </div>
    </section>
</form>