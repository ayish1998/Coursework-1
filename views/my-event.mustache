      // Function to open the update modal for editing an event
      function editEvent(id) {
        const updateModal = document.getElementById(id);
        updateModal.style.display = 'block';
        const closeBtn = updateModal.querySelector('[data-modal-toggle]');
        closeBtn.addEventListener('click', function() {
          updateModal.style.display = 'none';
        });
      }
      // Function to confirm the deletion of an event
      function confirmDeleteEvent(id) {
        // You can use the eventId to identify the event to delete
        const deleteModal = document.getElementById(`${id}_delete`);
        deleteModal.style.display = 'block';
        const closeBtn = deleteModal.querySelector('[data-modal-toggle]');
        closeBtn.addEventListener('click', function() {
          deleteModal.style.display = 'none';
        });
        const cancelBtn = deleteModal.querySelector('#cancelBtn');
        cancelBtn.addEventListener('click', function() {
          deleteModal.style.display = 'none';
        });
      }

      function deleteEvent(id) {
        const deleteEventForm = document.getElementById('deleteEventForm');
        deleteEventForm.action = `/alumni-event/events/${id}/delete`;
        deleteEventForm.submit();
      }
    </script>
    <script>
      // Function to toggle the form visibility
      function toggleFormVisibility() {
        const form = document.getElementById('event-container');
        const formOverlay = document.getElementById('form-overlay');
        const closeEventForm = document.getElementById('close-event-form');
        if (form.style.display === 'none' || form.style.display === '') {
          form.style.display = 'block';
          formOverlay.style.display = 'block';
          closeEventForm.addEventListener('click', function() {
            form.style.display = 'none';
            formOverlay.style.display = 'none';
          });
        } else {
          form.style.display = 'none';
          formOverlay.style.display = 'none';
        }
        // Store the visibility state in local storage
        localStorage.setItem('eventFormVisible', form.style.display);
      }
      // Check if the form should be visible on page load
      const savedFormVisibility = localStorage.getItem('eventFormVisible');
      if (savedFormVisibility === 'block') {
        document.getElementById('event-form').style.display = 'block';
      }
